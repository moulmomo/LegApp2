<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sweetBlue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mohamed.legapp2.AjouterLieu"
    >

    <TextView android:text="Liste des lieux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkBlue"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <ListView
        android:id="@android:id/list"
        android:layout_height="144dp"
        android:layout_width="match_parent"
        android:layout_weight="0.46"
        android:background="@color/white">
    </ListView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView android:text="Ajouter un lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkBlue"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/textView" />

        <TextView android:text="@string/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="122dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nameEdit"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:hint="@string/name"
            android:background="@color/white" />

        <Spinner
            android:id="@+id/typeSpinner"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:hint="@string/type"
            android:entries="@array/typesArray"
            android:background="@color/white"
            android:layout_marginEnd="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:text="@string/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/textView3" />

        <TextView android:text="@string/minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="116dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/majorEdit"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:hint="@string/major"
            android:background="@color/white" />

        <EditText
            android:id="@+id/minorEdit"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:hint="@string/minor"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id = "@+id/ajouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter lieu"
            android:background="@color/blueGrey"
            android:textColor="@color/white" />

        <Button
            android:id = "@+id/supprimerPremier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supprimer le premier lieu"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/blueGrey"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>
